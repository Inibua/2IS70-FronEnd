<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/item_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <ImageView
            android:id="@+id/imageViewent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0.11" />

        <TextView
            android:id="@+id/tventryname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageViewent"
            android:layout_toRightOf="@+id/imageViewent"
            android:textColor="#333"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tventrydescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tventryname"
            android:layout_toEndOf="@+id/imageViewent"
            android:layout_toRightOf="@+id/imageViewent"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:textColor="#333" />
    </RelativeLayout>

</LinearLayout>